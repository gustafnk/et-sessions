<h1>Listing sessions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Feature</th>
      <th>Focusarea</th>
      <th>Sprint</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.date %></td>
        <td><%= session.feature %></td>
        <td><%= session.focusarea %></td>
        <td><%= session.sprint %></td>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

